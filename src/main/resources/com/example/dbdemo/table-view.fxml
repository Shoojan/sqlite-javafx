<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="com.example.dbdemo.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
   <HBox spacing="10.0">
      <children>
         <TextField fx:id="nameTextField" promptText="Name" HBox.hgrow="ALWAYS" />
        <Button fx:id="addButton" onAction="#onAddBtnClicked" text="Add" />
      </children>
   </HBox>
   <Button fx:id="viewButton" alignment="CENTER" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onViewBtnClicked" text="View" VBox.vgrow="ALWAYS" />
   <TableView fx:id="testTableView">
     <columns>
       <TableColumn fx:id="idColumn" prefWidth="75.0" text="Id" />
       <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
     </columns>
   </TableView>
</VBox>
